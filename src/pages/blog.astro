---
import { getCollection } from "astro:content";

import BaseLayout from "../layouts/BaseLayout.astro";

import ContactCTA from "../components/ContactCTA.astro";
import PortfolioPreview from "../components/PortfolioPreview.astro";
import Hero from "../components/Hero.astro";
import Grid from "../components/Grid.astro";

import { fullNameWithoutMiddle, fullName } from "../constants/name";
import CallToAction from "../components/CallToAction.astro";
import Icon from "../components/Icon.astro";
const projects = (await getCollection("work")).sort(
  (a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf()
);
---

<BaseLayout
  title=`My Blog | ${fullName}`
  description=`Learn about ${fullName}'s most recent projects`
>
  <div class="stack gap-20">
    <main class="wrapper stack gap-8">
      <Hero title="My Blog" tagline="See my most recent blogs" align="start" />
      <strong>CURRENT PAGE IS UNDER CONSTRUCTION</strong>
      <p>TODO: dynamically present my latest blogs</p>
      <CallToAction href="https://blog.heyjoseph.me">
        For more blogs, check here
        <Icon icon="arrow-right" size="1.2em" />
      </CallToAction>
    </main>
    <ContactCTA />
  </div>
</BaseLayout>
